#include <iostream>

using namespace std;

// This program will calculate the area of a room in square meters.

int main(){
	
	cout<< "Enter the width of the room: ";
	int room_width{0};
	cin>> room_width;
	
	if(room_width<0){
		cout<<"room width must be above 0";
		return -1;
	}
	
	cout << "Enter the length of the room: ";
	int room_length{0};
	cin>> room_length;
	
	if(room_length<0){
		cout<<"room length must be above 0";
		return -1;
	}
	
	cout << "The area of the room is: "<< room_width * room_length << "meters." << endl;
	
	return 0;
}
